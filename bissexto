Programa
{
    função início()
    {
        // Declarar variável
        inteiro ano

        // Solicitar ao usuário a entrada do ano
        escreva("Digite um ano: ")
        leia(ano)

        // Verificar se o ano é bissexto
        se ((ano % 4 == 0) e (ano % 100 != 0)) ou (ano % 400 == 0) então
        {
            escreva(ano, " é um ano bissexto.")
        }
        senão
        {
            escreva(ano, " não é um ano bissexto.")
        }
    }
}
