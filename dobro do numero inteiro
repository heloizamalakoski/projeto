Programa
{
    função início()
    {
        // Declarar variáveis
        inteiro numero, dobro

        // Solicitar ao usuário a entrada de um número inteiro
        escreva("Digite um número inteiro: ")
        leia(numero)

        // Calcular o dobro do número
        dobro = numero * 2

        // Exibir o resultado
        escreva("O dobro de ", numero, " é ", dobro)
    }
}
