Programa
{
    função início()
    {
        // Declarar variáveis
        real celsius, fahrenheit

        // Solicitar ao usuário a entrada da temperatura em Celsius
        escreva("Digite a temperatura em Celsius: ")
        leia(celsius)

        // Converter Celsius para Fahrenheit
        fahrenheit = (celsius * 1.8) + 32

        // Exibir o resultado
        escreva(celsius, "°C é equivalente a ", fahrenheit, "°F")
    }
}
               
